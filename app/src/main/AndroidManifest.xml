<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ExtraText">
    <!-- Permission for user current location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- Permission for Glide Image Loading -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shoppie"
        tools:targetApi="31">
        <activity
            android:name=".AllCategoryActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".View.CartActivity"
            android:exported="true" >
        </activity>

        <activity
            android:name=".View.WishlistActivity"
            android:exported="false" />
        <activity
            android:name=".ProductDetailsActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".UserLocationPermissionActivity"
            android:exported="false" />
        <activity
            android:name=".CategoryActivity"
            android:exported="false">

        </activity>
        <activity
            android:name=".View.HomePageActivity"
            android:exported="false">

        </activity>
        <activity
            android:name=".View.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".flashSale_MainActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">


        </activity>
    </application>

</manifest>